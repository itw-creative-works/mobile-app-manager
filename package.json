{
  "name": "mobile-app-manager",
  "version": "0.0.1",
  "description": "Cross-platform mobile app framework for easy React Native development",
  "main": "dist/index.js",
  "exports": {
    ".": "./dist/index.js",
    "./build": "./dist/build.js",
    "./app": "./dist/app.js",
    "./screen": "./dist/screen.js"
  },
  "bin": {
    "mam": "bin/mobile-app-manager"
  },
  "scripts": {
    "start": "npm run prepare:watch",
    "prepare": "node -e \"require('prepare-package')()\"",
    "prepare:watch": "node -e \"require('prepare-package/watch')()\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "projectScripts": {
    "start": "npx mam clean && npx mam setup && npm run gulp --",
    "gulp": "gulp --cwd ./ --gulpfile ./node_modules/mobile-app-manager/dist/gulp/main.js",
    "ios": "npx mam clean && npx mam setup && npx mam ios",
    "android": "npx mam clean && npx mam setup && npx mam android",
    "build": "MAM_BUILD_MODE=true npm run gulp -- build"
  },
  "engines": {
    "react": "20.0.0"
  },
  "preparePackage": {
    "input": "./src",
    "output": "./dist",
    "replace": {}
  },
  "keywords": [
    "react-native",
    "mobile",
    "ios",
    "android",
    "framework",
    "build-tools"
  ],
  "author": "ITW Creative Works",
  "license": "MIT",
  "dependencies": {
    "fs-jetpack": "^5.1.0",
    "yargs": "^17.7.2",
    "gulp": "^5.0.1",
    "glob": "^11.0.3",
    "chalk": "^4.1.2",
    "through2": "^4.0.2",
    "webpack": "^5.89.0",
    "webpack-stream": "^7.0.0",
    "babel-loader": "^9.1.3",
    "@babel/core": "^7.23.5",
    "@babel/preset-env": "^7.23.5",
    "@babel/preset-react": "^7.23.3",
    "@babel/preset-typescript": "^7.23.3",
    "sass": "^1.69.5",
    "gulp-sass": "^5.1.0",
    "ws": "^8.14.2",
    "wonderful-fetch": "^1.3.4",
    "node-powertools": "^2.3.2",
    "json5": "^2.2.3",
    "minimatch": "^10.0.1"
  },
  "devDependencies": {
    "prepare-package": "^1.2.5"
  },
  "peerDependencies": {
    "gulp": "^5.0.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ITW-Creative-Works/mobile-app-manager.git"
  }
}
